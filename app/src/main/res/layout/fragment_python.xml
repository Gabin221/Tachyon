<?xml version="1.0" encoding="utf-8"?>
<!-- This linear layout is used to show elements
	in vertical or in horizontal linear manner -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:text="Hello World!" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="15dp"
        android:text="Ceci est le fameux programme 'Hello World!' en Python. Son objectif est purement pédagogique, il sert à montrer de manière simple la structure et un peu de la syntaxe d'un langage de programmation. Ici j'ai fais un 'Hello World!' assez complexe étant donné que beaucoup de lignes ne sont pas nécessaires (en réalité toutes puisque seule la deuxième ligne est utile) mais ceci permet de montrer dès le début les bonnes habitudes de programmation en Python." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/back"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:text="def hello():\n\tprint('Hello World!')\n\n\nif __name__ == '__main__':\n\thello()" />

</LinearLayout>
